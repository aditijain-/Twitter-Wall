<html>
  <head>
  </head>
  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><a href="/">All</a></li>
        <li><a href="/tweets">Tweets</a></li>
        <li class="active"><a href="#">Comments</a></li>
        <% if current_user %>
          <li><a href="/moderator">Moderator</a></li>
        <% end %>
      </ul>
      <!-- Main body of page -->
      <p id="notice"><%= notice %></p>
      <div class="row">
        <div class="col-md-6">
          <%= link_to 'New Comment', new_comment_path, :class => "btn btn-info" %>
        </div>
      </div>

      <!-- Button trigger modal -->
<!--<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>-->

<!-- Modal -->


      <div class="row">
        <% @commentsArray.each do |comment| %> 
          <div class="col-md-6 tweet">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal3" style="background: white; outline: none; border: none; width: 100%; height: 100%; white-space: normal; text-align: left">
            <div class="module">
              <div class="module-body" style: "margin-left: 0px; color:black;">
                <%= comment %>
              </div>
              
            </div>
            </button>
          </div>
        <% end %>
      </div>
    </div>


    <div class="modal fade" id= "myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top: 10%">
      <div class="modal-dialog vertical-align-center">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

          </div>
          <div class="modal-body" id="modalBody3">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
        </div>
      </div>
  </body>
</html>