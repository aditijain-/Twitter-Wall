<html>
	<head>
	</head>
	<body>
		<div class="container"> 
		<ul class="nav nav-tabs">
	        <li class="active"><a href="#">All</a></li>
	        <li><a href="/tweets">Tweets</a></li>
	        <li><a href="/comments">Comments</a></li>
	        <!-- if <% current_user %>-->
	        <li><a href="/moderator">Moderator</a></li>
	        <!--<%  %> end -->
        </ul>
        <div class="row">
        <% @commentsArray.each do |comment| %> 
          <div class="col-md-6 tweet">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal1" style="background: white; outline: none; border: none; width: 100%; height: 100%; white-space: normal; text-align: left">
            <div class="module">
              <div class="module-body" style: "margin-left: 0px;">
                <div style="color:black"><%= comment %></div>
              </div>
              
            </div>
            </button>
          </div>
        <% end %>
      </div>
      <div class="row">
        <% @tweetsArray.each do |tweet| %> 
          <div class="col-md-6 tweet">
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal1" style="background: white; outline: none; border: none; width: 100%; height: 100%; white-space: normal; text-align: left" id="allModal">
            <div class="module" style:"display: block">
              <div class="module-body" style="display:block" id = "tweetBody" >
                <img src=""></img>
                <span><div style="color:black"><%= tweet %></div></span>
              </div>
            </div>
          </button>
          </div>
        <% end %>
      </div>
      </div> 

      <div class="modal fade" id= "myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top: 10%;">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body" id="modalBody1">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
        </div>
      </div>
	</body>
</html>